{% extends 'base.html.twig' %}

{% block title %}{{ livre.titre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">{{ livre.titre }}</h1>
                <div class="card-text">
                    <p><strong>Auteur:</strong> {{ livre.auteur }}</p>
                    {% if livre.imagelivre %}
                        <img src="/uploads/livres/{{ livre.imagelivre }}" alt="{{ livre.titre }}" class="img-fluid mb-3" style="max-height: 300px;">
                    {% endif %}
                    {% if livre.categorie %}
                        <p><strong>Catégorie:</strong> {{ livre.categorie.nom }}</p>
                    {% endif %}
                </div>
                <a href="{{ path('app_livre_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}
